# Quantitative Momentum Strategy Configuration
# Copy this to .env and fill in your values

# ============================================
# EMAIL CONFIGURATION (Gmail with 2FA)
# ============================================
GMAIL_USER=your-email@gmail.com
GMAIL_PASSWORD=your-16-character-app-password
GMAIL_SERVER=smtp.gmail.com
RECIPIENT_EMAIL=paras.m.parmar@gmail.com

# ============================================
# STRATEGY PARAMETERS
# ============================================
NIFTY_UNIVERSE=nifty_500              # or nifty_50
PORTFOLIO_SIZE=40                     # Number of stocks
REBALANCE_FREQUENCY=quarterly         # or monthly, semi-annual

# ============================================
# MOMENTUM CALCULATION
# ============================================
LOOKBACK_MONTHS=12                    # 12-month lookback
SKIP_LAST_MONTH=true                  # Skip last month returns
FIP_LOOKBACK_DAYS=252                 # 252 trading days

# ============================================
# ENTRY/EXIT RULES
# ============================================
MOMENTUM_PERCENTILE=90                # Top 10% momentum
FIP_QUALITY_THRESHOLD=-0.10           # Prefer negative FIP
COMBINED_SCORE_MIN=0.50               # Minimum composite score
STOP_LOSS_PCT=15                      # Stop loss % below entry
TARGET_PROFIT_PCT=25                  # Target % above entry
MAX_HOLDING_DAYS=90                   # Max holding (quarterly)

# ============================================
# RISK MANAGEMENT
# ============================================
POSITION_SIZE_PCT=2.5                 # Per stock: 100/40
MAX_SECTOR_CONCENTRATION=0.15         # 15% max per sector
LEVERAGE=1.0                          # 1.0 = no leverage (long only)

# ============================================
# DATA SOURCE
# ============================================
DATA_SOURCE=yfinance                  # or nsetools, zerodha
MARKET_OPEN_HOUR=9                    # 9:15 AM IST
MARKET_CLOSE_HOUR=15                  # 3:30 PM IST

# ============================================
# LOGGING & DEBUG
# ============================================
DEBUG_MODE=false                      # Set to true for verbose output
LOG_LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR
SAVE_ARTIFACTS=true                   # Save to /output directory

# ============================================
# BACKTEST PARAMETERS
# ============================================
BACKTEST_START_YEAR=2009              # 15-year backtest start
BACKTEST_END_YEAR=2024                # 15-year backtest end
TRANSACTION_COST_PCT=0.20             # Per rebalance
MANAGEMENT_FEE_PCT=1.00               # Annual fee
